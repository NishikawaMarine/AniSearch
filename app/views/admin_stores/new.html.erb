<div class="container-fluid pb-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    	<div class="background mt-4" style="height: 900px">
    		<% if flash[:notice] %>
    			<h4 class="text-danger ml-5 pt-5"><%= flash[:notice] %></h4>
    		<% end %>
				<h1 class="text-center pt-4">〜New Post〜</h1>
					<div class="col-md-9 offset-md-3">
						<%= form_for @store, url: admin_stores_path do |f| %>
							<h4>image</h4>
							<%= f.attachment_field :image %>
							<h4>Store name</h4>
							<%= f.text_field :store_name %>
							<h4>phone number</h4>
							<%= f.text_field :phone_number %>
							<h4>business hours</h4>
							<%= f.text_field :opening_hours %>
							<h4>address</h4>
							<%= f.text_field :address %>
							<h4>Regular holiday</h4>
							<%= f.text_field :regular_holiday %>
							<h4>fee</h4>
							<%= f.text_field :fee %>
							<h5>カフェのタイプ タグをカンマ区切りで入力</h5>
							<%= f.text_field :type_list, value: @store.type_list.join(',') %>
							<h5>都市名 タグをカンマ区切りで入力</h5>
							<%= f.text_field :city_list, value: @store.city_list.join(',') %>
							<%= f.submit "Post",class: "btn btn-light btn-lg" %>
						<% end %>
					</div>
			</div>
		</div>
	</div>
</div>
