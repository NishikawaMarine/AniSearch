<div class="container-fluid pb-4 pt-4">
  <div class="row">
    <div class="col-md-10 offset-md-1 ">
    	<div class="background pt-4 pb-5 mx-auto">
    		<% if flash[:notice] %>
    			<h4 class="text-info ml-5 pt-5"><%= flash[:notice] %></h4>
    		<% end %>
				<h1 class="text-center pt-4">〜Cafe details〜</h1>
				<div class="img ml-5">
					<%= attachment_image_tag @store, :image, :fill, 830, 500, format: 'jpg', fallback: "/images/no_image.jpg", size:"830x500",class: "ml-5 mt-3 mb-3",style: "border-radius: 50px" %></div>
					<table class="table text-white h4" style="border-top: solid 2px white;">
							<tbody>
								<tr>
									<th style="width: 150px;"></th>
									<th style="width: 300px;">Store name</th>
									<td class="h2"><%= @store.store_name %></td>
								</tr>
								<tr>
									<th></th>
									<th>Phone number</th>
									<td><%= @store.phone_number %></td>
								</tr>
								<tr>
									<th></th>
									<th>Opening hours</th>
									<td><%= @store.opening_hours %></td>
								</tr>
								<tr>
									<th></th>
									<th>Address</th>
									<td><%= @store.address %></td>
								</tr>
								<tr>
									<th></th>
									<th>Regular holiday</th>
									<td><%= @store.regular_holiday %></td>
								</tr>
								<tr>
									<th></th>
									<th>Fee</th>
									<td>30分 ¥<%= @store.fee %></td>
								</tr>
								<tr>
									<th></th>
									<th>Categories</th>
									<td class="align-middle"style="width: 600px;">
										<% @store.type_list.each do |type| %>
											<span class="badge badge-info"><%= type %></span>
										<% end %><br/>
										<% @store.city_list.each do |city| %>
											<span class="badge badge-info"><%= city %></span>
										<% end %>
									</td>
								</tr>
								<tr>
									<th></th>
									<th></th>
									<td><%= link_to edit_admin_store_path(@store) do %>
												<div class="btn btn-info btn-lg col-sm-5 text-white"style= "border-radius: 50px; width: 200px;">Edit</div>
											<% end %>
											<%= link_to admin_store_path(@store), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
												<div class="btn btn-danger btn-lg col-sm-5 text-white"style= "border-radius: 50px; width: 200px;">Delete</div>
											<% end %>
									</td>
								</tr>
							</tbody>
					</table>
			</div>
		</div>
	</div>
</div>

