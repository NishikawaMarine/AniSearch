<div class="container-fluid pb-4">
  <div class="row">
    <div class="col-md-12 ">
    	<div class="background mt-4 pt-4 pb-5">
    		<% if flash[:notice] %>
    			<h4 class="text-info ml-5 pt-5"><%= flash[:notice] %></h4>
    		<% end %>
				<h1 class="text-center pt-4">〜Cafe list〜</h1>
				<% @stores.each do |store| %>
					<%= link_to admin_store_path(store), class: "text-white" do %>
						<table class="table text-white h4" style="border-top: solid 2px white;">
							<tbody>
								<tr>
									<td></td>
									<td><%= attachment_image_tag store, :image, :fill, 300, 250, format: 'jpg', fallback: "no_image.jpg", size:"250x150",style: "border-radius: 50px;" %>
									</td>
									<td></td>
									<td class="align-middle text-center"style="width: 300px;"><%= store.store_name %></td>
									<td class="align-middle text-center"style="width: 300px;"><i class="fas fa-map-marker-alt mr-3"></i><%= store.address %></td>
									<td class="align-middle "style="width: 600px;">
										<% store.type_list.each do |type| %>
											<span class="badge badge-info" style= "border-radius: 50px;"><%= type %></span>
										<% end %><br/>
										<% store.city_list.each do |city| %>
											<span class="badge badge-info" style= "border-radius: 50px;"><%= city %></span>
										<% end %>
									</td>
								</tr>
							</tbody>
						</table>
					<% end %>
				<% end %>
				<%= link_to new_admin_store_path(@store) do %>
					<div class="btn btn-light btn-lg btn-block mt-5 mb-5">New Post</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

