<div class="container-fluid pb-4">
  <div class="row">
    <div class="col-md-12 ">
    	<div class="background mt-4 pt-4 pb-5">
				<h1 class="text-center pt-4">〜Cafe list〜</h1>
				<% @stores.each do |store| %>
					<%= link_to admin_store_path(store) do %>
						<table class="table text-white h5" style="border-top: solid 2px white;">
							<tbody>
								<tr>
									<td><%= attachment_image_tag store, :image, :fill, 150, 100, format: 'jpg', fallback: "no_image.jpg", size:"150x100" %>
									</td>
									<td class="align-middle"style="width: 200px;"><%= store.store_name %></td>
									<td class="align-middle"style="width: 280px;"><%= store.phone_number %></td>
									<td class="align-middle"style="width: 280px;"><%= store.opening_hours %></td>
									<td class="align-middle"style="width: 100px;"><%= store.address %></td>
									<td class="align-middle"style="width: 100px;"><%= store.regular_holiday %></td>
									<td class="align-middle"style="width: 180px;">30分 ¥<%= store.fee %></td>
								</tr>
							</tbody>
						</table>
					<% end %>
				<% end %>
				<%= link_to new_admin_store_path(@store) do %>
					<div class="btn btn-light btn-lg btn-block mt-5 mb-5">New Post</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

