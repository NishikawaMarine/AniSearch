<div class="container-fluid pb-4">
  <div class="row">
    <div class="col-md-12 ">
    	<div class="background mt-4">
				<h1 class="text-center pt-4">〜New Post〜</h1>
				<%= form_for(@store) do |f| %>
					<h4>Store name</h4>
					<%= f.text_field :store_name %>
					<h4>phone number</h4>
					<%= f.text_field :phone_number %>
					<h4>business hours</h4>
					<%= f.text_field :opening_hours %>
					<h4>address</h4>
					<%= f.text_field :address %>
					<h4>Regular holiday</h4>
					<%= f.text_field :regular_holiday %>
					<h4>fee</h4>
					<%= f.text_field :fee %>
					<%= f.submit "Post" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
