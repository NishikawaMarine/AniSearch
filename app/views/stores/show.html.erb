<div class="container-fluid pb-4 pt-4">
  <div class="row">
    <div class="col-md-10 offset-md-1">
    	<div class="background pt-4 pb-5 mx-auto">
				<div class="title text-center pt-4">〜Cafe details〜</div>
				<div class="img">
					<%= attachment_image_tag @store, :image, format: 'jpg', fallback: "/images/no_image.jpg",class: "mt-3 mb-3 show-img" %></div>
					<table class="table text-white show-body" style="border-top: solid 2px white;">
							<tbody>
								<tr>
									<th class="show-th">Store name</th>
									<td class="show-td"><%= @store.store_name %></td>
								</tr>
								<tr>
									<th>Phone number</th>
									<td><%= @store.phone_number %></td>
								</tr>
								<tr>
									<th>Opening hours</th>
									<td><%= @store.opening_hours %></td>
								</tr>
								<tr>
									<th>Address</th>
									<td><%= @store.address %></td>
								</tr>
								<tr>
									<th>Regular holiday</th>
									<td><%= @store.regular_holiday %></td>
								</tr>
								<tr>
									<th>Fee</th>
									<td>30分 ¥<%= @store.fee %></td>
								</tr>
								<tr>
									<th>Categories</th>
									<td class="align-middle">
										<% @store.type_list.each do |type| %>
											<span class="badge badge-info"><%= type %></span>
										<% end %><br/>
										<% @store.city_list.each do |city| %>
											<span class="badge badge-info"><%= city %></span>
										<% end %>
									</td>
								</tr>
							</tbody>
					</table>
			</div>
		</div>
	</div>
</div>


